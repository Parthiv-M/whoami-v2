---
import Footer from "@components/common/Footer.astro";
import StoryCard from "@components/StoryCard.astro";
import Layout from "src/layouts/Layout.astro";
const stories = await Astro.glob("../../stories/**/*.md");
const numberOfStories = stories.length;
const firstSet = stories.slice(0, numberOfStories / 4);
const secondSet = stories.slice(numberOfStories / 4, numberOfStories * 0.75);
const thirdSet = stories.slice(numberOfStories * 0.75, undefined);
---

<Layout 
    title="Storyboard | Parthiv Menon" 
    description="We are all stories, waiting to unfold" 
    extraKeywords="writing, poems, stories, storyboard, mit post, cybermanipal"
>
    <div class="storyboard-wrapper">
        <div class="storyboard-grid">
            <div class="storycard-header">
                <a class="go-back flex" href="/">
                    <img src="/assets/icons/arrow-right.svg" height="15px" width="12px"
                        style="rotate:180deg; margin-right: 5px" />
                    Back Home
                </a>
                <h1>STORYBOARD</h1>
                <p>We are all stories, waiting to unfold.</p>
            </div>
            {
            firstSet.map((story: any) => {
            const { title, date, slug } = story.frontmatter;
            return (
            <StoryCard title={title} story={story} date={date} slug={slug} />
            )
            })
            }
            <a class="storycard-wrapper" href="https://themitpost.com/author/parthiv/" target="_blank">
                <div class="special-storycard themitpost flex flex-col">
                    <div>
                        <p class="special-title">I was a writer at</p>
                        <p class="wrote-at">The MIT Post</p>
                        <p style="font-size: 0.8rem; margin-top: 3px">
                            Contributed to articles, reports, the
                            quarterly magazine, and the successful coverage of college fests.
                        </p>
                    </div>
                    <div class="flex" style="align-items: center; gap: 10px; margin-top: 20px">
                        <p>Find my articles on their website</p>
                        <img src="/assets/icons/arrow-right-dark.svg" height="15px" width="12px" />
                    </div>
                </div>
            </a>
            {
            secondSet.map((story: any) => {
            const { title, date, slug } = story.frontmatter;
            return (
            <StoryCard title={title} story={story} date={date} slug={slug} />
            )
            })
            }
            <a class="storycard-wrapper" href="https://cybermanipal.wearemist.in/author/@ParthivMenon" target="_blank">
                <div class="special-storycard cybermanipal flex flex-col">
                    <div>
                        <p class="special-title">I also wrote for</p>
                        <p class="wrote-at">Cybermanipal</p>
                        <p style="font-size: 0.8rem; margin-top: 3px">
                            Keeping track of the latest happenings in the cybersecurity world
                            via news articles and blogs.
                        </p>
                    </div>
                    <div class="flex" style="align-items: center; gap: 10px; margin-top: 20px">
                        <p>Find my write-ups on their blog</p>
                        <img src="/assets/icons/arrow-right-dark.svg" height="15px" width="12px" />
                    </div>
                </div>
            </a>
            {
            thirdSet.map((story: any) => {
            const { title, date, slug } = story.frontmatter;
            return (
            <StoryCard title={title} story={story} date={date} slug={slug} />
            )
            })
            }
        </div>
    </div>
    <Footer />
</Layout>

<style>
    .storyboard-wrapper {
        min-height: 100vh;
        padding: 1rem;
    }

    .storyboard-grid {
        min-height: 100%;
        display: grid;
        grid-template-columns: 25% 25% 25% 25%;
    }

    .storycard-wrapper {
        padding: 3px;
    }

    .special-storycard {
        padding: 12px;
        border: 1px solid transparent;
        border-radius: 10px;
        height: 91%;
        justify-content: space-between;
    }

    .special-title {
        font-size: 1.8rem;
    }

    .wrote-at {
        font-weight: 800;
        font-size: 1.8rem;
        margin-top: -5px;
    }

    .themitpost .special-title,
    .themitpost .wrote-at {
        color: #fc6532;
    }

    .themitpost:hover {
        background-color: #fc6532;
        color: var(--primary-dark);
    }

    .themitpost:hover .special-title,
    .themitpost:hover .wrote-at {
        color: inherit;
    }

    .cybermanipal .special-title,
    .cybermanipal .wrote-at {
        color: rgba(110, 231, 183);
    }

    .cybermanipal:hover {
        background-color: rgba(110, 231, 183);
        color: var(--primary-dark);
    }

    .cybermanipal:hover .special-title,
    .cybermanipal:hover .wrote-at {
        color: inherit;
    }

    .go-back {
        align-items: center;
        margin-bottom: 5px;
        width: fit-content;
        z-index: 10;
    }

    .go-back:hover {
        gap: 5px;
    }

    .storycard-header {
        grid-column: 1 / span 3;
        padding: 30px;
    }

    .storycard-header h1 {
        font-family: 'Russo One', sans-serif;
        font-size: 3rem;
        letter-spacing: 0.3rem;
    }

    .storycard-header p {
        letter-spacing: 0.1rem;
        color: var(--primary-colour);
        font-weight: bold;
    }

    @media only screen and (max-width: 1224px) {
        .storyboard-grid {
            grid-template-columns: auto auto auto; 
        }
    }

    @media only screen and (max-width: 820px) {
        .storyboard-grid {
            display: flex;
            flex-direction: column;
        }

        .go-back {
            position: fixed;
            top: 20px;
            padding: 10px;
            background-color: var(--primary-dark);
            border-radius: 10px;
            box-shadow: 0px 0px 20px 0.1px var(--tertiary-dark);
        }

        .storycard-header {
            padding: 55px 10px;
        }

        .storycard-header h1 {
            font-size: 2rem;
        }

        .storycard-preview {
            opacity: 0.85;
        }

        .themitpost {
            background-color: #fc6532;
            color: var(--primary-dark);
        }

        .themitpost .special-title,
        .themitpost .wrote-at {
            color: inherit;
        }

        .cybermanipal {
            background-color: rgba(110, 231, 183);
            color: var(--primary-dark);
        }

        .cybermanipal .special-title,
        .cybermanipal .wrote-at {
            color: inherit;
        }
    }
</style>