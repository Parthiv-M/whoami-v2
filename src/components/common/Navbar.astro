---
const linkData = [
    { name: "Projects", link: "#projects", iconPath: "/assets/icons/project.svg", },
    { name: "WorkXP", link: "#workxp", iconPath: "/assets/icons/work.svg", },
    { name: "Research", link: "#research", iconPath: "/assets/icons/research.svg", },
    { name: "Writing", link: "/storyboard", iconPath: "/assets/icons/writing.svg", },
    { name: "Artwork", link: "/artwork", iconPath: "/assets/icons/art.svg", },
];
---

<!-- navbar for large screen -->
<div class="nav-wrapper flex">
    <a href="/" class="parthiv"><img height="30" src="/assets/images/pOnTheNav.png" /></a>
    <ul class="nav-links flex">
        {
        linkData.map((link) => {
        return (
        <li class="nav-link">
            <a href={link.link} class="flex">
                <img src={link.iconPath} height="15" />
                <span>{link.name}</span>
            </a>
        </li>
        )
        })
        }
    </ul>
    <div class="more">
        MORE
        <img src="assets/icons/more.svg" height="15" />
    </div>
</div>

<!-- menu for mobile screens -->
<div class="mobile-nav flex flex-col">
    {
    linkData.map((link) => {
    return (
    <li class="mobile-nav-link">
        <a href={link.link} class="flex">
            <img src={link.iconPath} height="15" />
            <span>{link.name}</span>
        </a>
    </li>
    )
    })
    }
</div>

<script>
    const moreButton = document.querySelector<HTMLElement>(".more")!;
    const mobileLink = document.querySelector<HTMLElement>(".mobile-nav-link a")!;
    // toggle state of mobile pop up nav-menu 
    const toggleMobileNavMenu = () => {
        const mobileNav = document.querySelector<HTMLElement>(".mobile-nav")!;
        if (mobileNav.style.display === "flex") {
            mobileNav.style.display = "none";
            moreButton.innerHTML = `MORE <img src="assets/icons/more.svg" height="15" />`;
        } else {
            mobileNav.style.display = "flex";
            moreButton.innerHTML = `LESS <img src="assets/icons/more.svg" style="rotate:180deg" height="15" />`;
        }
    }
    moreButton?.addEventListener("click", () => {
        toggleMobileNavMenu();
    });
    mobileLink?.addEventListener("click", () => {
        toggleMobileNavMenu();
    })
</script>

<style>
    .nav-wrapper {
        width: 100vw;
        height: 50px;
        padding: 10px;
        justify-content: center;
        align-items: center;
        font-weight: 500;
        font-size: 1rem;
        position: fixed;
        background-color: var(--primary-dark);
    }

    .parthiv:hover {
        transform: scale(1.1);
    }

    .nav-links {
        list-style: none;
        align-items: center;
        gap: 1rem;
    }

    .nav-links .nav-link {
        padding: 8px 12px;
        border-radius: 0.5rem;
    }

    .nav-link a {
        align-items: center;
        gap: 7px;
    }

    .nav-links li:hover {
        background-color: rgba(56, 56, 56, 0.4);
        color: white;
        box-shadow: 0px 0px 10px 0.5px rgba(24, 24, 24, 0.551);
    }

    .nav-link a img {
        visibility: hidden;
    }

    .nav-link:hover a img {
        visibility: visible;
    }

    .more,
    .mobile-nav {
        display: none;
        list-style: none;
    }

    @media only screen and (max-width: 820px) {
        .nav-wrapper {
            max-width: 96vw;
            justify-content: space-between;
            padding: 5px 10px;
            z-index: 10;
        }

        .nav-links {
            display: none;
        }

        .more {
            display: flex;
            gap: 5px;
            align-items: center;
            padding: 7px;
            font-size: 0.9rem;
            font-weight: 700;
            color: var(--primary-colour);
            border: 2px solid var(--primary-colour);
            border-radius: 0.5rem;
        }

        .mobile-nav {
            width: 40vw;
            height: 25vh;
            position: fixed;
            right: 0;
            top: 3.5rem;
            margin-right: 10px;
            padding: 20px;
            background-color: var(--primary-colour);
            border-radius: 5px;
            justify-content: space-between;
            align-items: flex-start;
            z-index: 10;
        }

        .mobile-nav-link a {
            gap: 7px;
            align-items: center;
        }
    }
</style>