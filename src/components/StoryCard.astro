---
interface Props {
    slug: string;
    title: string;
    date?: string[];
    story: any;
}
const {
    slug, title, date
} = Astro.props;
const story = Astro.props.story.rawContent();
let modifiedStory = story.replace("<br />", " ");
while (modifiedStory.includes("<br />")) {
    modifiedStory = modifiedStory.replace("<br />", " ");
}
modifiedStory = modifiedStory.substring(0, 350);
---

<div class="storycard-wrapper" onclick={`location.href='/storyboard/${slug}' ;`}>
    <div class="storycard flex flex-col">
        <div>
            <h4 class="storycard-title">{title}</h4>
            <h5 class="storycard-date">{date}</h5>
            <p class="storycard-preview">
                {modifiedStory.trim()}<span>...</span>
            </p>
        </div>
        <a href={`/storyboard/${slug}`} class="flex read">
            Continue Reading
            <img src="/assets/icons/arrow-right.svg" height="15px" width="12px" />
        </a>
    </div>
</div>

<style>
    .storycard-wrapper {
        padding: 3px;
    }

    .storycard:hover {
        cursor: pointer;
        border: 1px solid var(--secondary-dark);
    }

    .read:hover {
        border: 0.5px solid white;
    }

    .storycard {
        background-color: var(--tertiary-dark);
        padding: 12px;
        border: 1px solid transparent;
        border-radius: 10px;
        min-height: 91%;
        justify-content: space-between;
    }

    .storycard-title {
        font-size: 1.2rem;
    }

    .storycard-date {
        color: var(--secondary-dark);
    }

    .read {
        align-items: center;
        justify-content: space-between;
        font-size: 0.9rem;
        margin-top: 10px;
        padding: 10px;
        border-radius: 10px;
        border: 0.5px solid transparent;
        background-color: rgba(0, 0, 0, 0.153);
    }

    .storycard-preview {
        opacity: 0.75;
    }

    .storycard-preview:hover {
        opacity: 1;
    }

    .storycard-preview span {
        color: var(--primary-colour);
    }

    @media only screen and (max-width: 820px) {
        .storycard-preview {
            opacity: 0.85;
        }
    }
</style>